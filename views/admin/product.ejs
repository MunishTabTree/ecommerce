<%- include('Header') %>
<div style="margin-top: 10px; margin-left:10px">
    <div class="row">
        <div class="col-md-2">
            <h4 style="font-weight: bold;">Products</h4>
        </div>
        <div class="col-md-8"></div>
        <div class="col-md-2" style="text-align: right;">
            <a href="/admin/addproduct" style="text-decoration: none;color:white"><button class="btn btn-primary">Add Product</button></a>
        </div>
    </div>
    <hr width="60%" style="color: grey;" align="left"/>
    <!-- Product List -->
    <div>
            <% products.forEach((x, i) => { %>
        <div class="product-list">
            <div class="row">
                <div class="col-sm-1">
                    <img src="https://www.seoclerk.com/pics/319222-1IvI0s1421931178.png" class="rounded-circle" style="width: 100px;" alt="Avatar" />
                </div>
                <div class="col-sm-9">
                    <div style="font-weight: bold;"><%- x.id %></div>
                    <div>Product Description</div>
                    <br/>
                    <div class="row">
                        <div class="col-sm-4">
                            <b>Brand:</b> Brand 1
                        </div>
                        <div class="col-sm-4">
                            <b>Category:</b> Category 1
                        </div>
                        <div class="col-sm-4">
                            <b>Sub Category:</b> Sub Category 1
                        </div>
                    </div>
                </div>
                <div class="col-sm-2" style="text-align: center;">
                    <br/>
                    <div style="font-weight: bold;font-size: 24px;">Rs. 1200</div>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include('Footer') %>

<style>
.product-list{
    margin:15px 2px;
    padding: 10px;
    border-bottom: 1px solid grey;
    box-shadow: 0px 2px 1px grey;
}
</style>